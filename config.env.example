# Database Configuration
MYSQL_HOST=localhost
MYSQL_USER=root
MYSQL_PASSWORD=your_password
MYSQL_DATABASE=hidupku_db
MYSQL_PORT=3306

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OpenStreetMap Configuration (Free Alternative to Google Places)
# No API key needed - using Nominatim and Overpass APIs
OSM_USER_AGENT=HidupKu-HealthApp/1.0

# JWT Secret (Ganti dengan secret yang kuat)
JWT_SECRET=your_strong_jwt_secret_key_here

# Server Configuration
NODE_ENV=development
PORT=3000

# Security Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
SESSION_SECRET=your_session_secret_here

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
HSTS_MAX_AGE=31536000
CONTENT_SECURITY_POLICY=true 